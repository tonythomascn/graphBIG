#!/bin/bash
#This script searches all the dataset dir within the data_dir
#Load the edge and vertices within
data_dir=$HOME/graph_data/friendster

rm -rf log
mkdir -p log
for data in "$data_dir"/*
do
  sub=${data##*/}
  touch log/$sub.csv
  echo "threadnum,loadingtime,time" > log/$sub.csv
  ./connectedcomponent  \
  --dataset $data \
  >> log/$sub.csv ;
done

tar czf cc_icc.tar.gz log/
